<view class="shopOrderDetail_wrap wrap"><view class="status_bar index_status_bar"></view><customnav vue-id="1" ismsg="{{true}}" isSearch="{{false}}" midtitle="{{true}}" navtitle="订单详情" cancletext="{{false}}" focus="{{false}}" bind:__l="__l"></customnav><view class="detailHeader"><view class="hleft"><label class="_span">{{statusText}}</label></view><view class="hright"><view class="{{['iconfont _i',statusIcon]}}"></view></view></view><scroll-view class="order_list" scroll-y="true"><block wx:for="{{orderDetailInfo}}" wx:for-item="item" wx:for-index="idx" wx:key="idx"><view class="orderInfo"><view class="loaction_box"><label class="location_icon _span"><view class="iconfont icon-round_location_fill _i"></view></label><view class="location"><view class="contact_info">{{item.consignee}}<label class="_span">{{item.phone}}</label></view><view class="_p">{{item.address}}</view></view></view><view class="order_box"><block wx:for="{{item.goods}}" wx:for-item="goods" wx:for-index="gidx" wx:key="gidx"><view class="order_item"><view class="o-left"><image class="order_img" src="{{goods.img}}" mode="aspectFill"></image></view><view class="omid"><view class="_p">{{goods.name}}</view><block wx:if="{{goods.gift==1}}"><label class="_span">{{"规格:"+goods.format_spec}}</label></block></view><block wx:if="{{goods.gift==1}}"><view class="o-right"><label class="_span">{{"￥"+goods.price}}</label><view class="or-bottom"><label class="_span">{{"× "+goods.quantity}}</label><label class="_span">{{"优惠："+goods.coupon_fee}}</label></view></view></block><block wx:else><view class="o-right gift-right"><label class="_span">赠品</label></view></block></view></block><view class="price_box"><view>商品运费<label class="_span">{{"+"+item.freight}}</label></view><view>优惠券优惠<label class="_span">{{"-"+item.coupon_fee}}</label></view><view>活动优惠<label class="_span">{{"-"+item.activity_fee}}</label></view><view>账期溢价<label class="_span">{{"+"+item.period_fee}}</label></view><view>应付金额<label class="_span">{{"￥"+item.fact_price}}</label></view><view>实付款(含运费)<label style="font-weight:600;" class="_span">{{"￥"+item.fact_pay_price}}</label></view></view><view class="orderInfo_box"><view class="_h3">订单信息</view><view><label class="_span">订单备注:</label><view class="_p">{{item.memo}}</view></view><view><label class="_span">订单编号:</label><label class="_span">{{item.orderno}}</label></view><view><label class="_span">创建时间:</label><label class="_span">{{item.create_time}}</label></view><view><label class="_span">结算方式:</label><label class="_span">{{item.order_type==1?'账期订单':item.order_type==2?'到付订单':'现付订单'}}</label></view><block wx:if="{{item.staff_name}}"><view><label class="_span">代下单员:</label><label class="_span">{{item.staff_name}}</label></view></block><view><label class="_span">配送方式:</label><label class="_span">快递配送</label></view></view><view class="make-qrcode-box"><button class="make-qrcode" type="warn" size="mini">生成二维码</button></view></view></view></block></scroll-view></view>